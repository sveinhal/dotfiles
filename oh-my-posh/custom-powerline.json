{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "powerline",
          "leading_powerline_symbol": "",
          "foreground": "252",
          "background": "242",
          "background_templates": [
            "{{ if .Root }}160{{ end }}"
          ],
          "template": " {{ .UserName }} "
        },
        {
          "type": "text",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "252",
          "background": "238",
          "template": " {{ .HostName }} "
        },
        {
          "type": "session",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "15",
          "background": "208",
          "template": "{{ if .SSHSession }} SSH {{ end }}"
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "15",
          "background": "32",
          "template": "{{ if hasPrefix .Env.HOME .Location }} \udb81\udf25 {{ end }}"
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "252",
          "background": "242",
          "template": " {{ $home := print .Env.HOME }}{{ if hasPrefix $home .Location }}{{ $rel := trimPrefix $home .Location }}{{ $rel = trimPrefix \"/\" $rel }}{{ if $rel }}{{ .Format $rel }}{{ end }}{{ else }}{{ .Path }}{{ end }} ",
          "properties": {
            "cache_duration": "none",
            "folder_separator_icon": " \ue0b1 ",
            "style": "agnoster_full",
            "display_root": true
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "15",
          "background": "35",
          "background_templates": [
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}160{{ end }}",
            "{{ if or (.Working.Changed) (.Staging.Changed) }}214{{ end }}"
          ],
          "foreground_templates": [
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}15{{ end }}"
          ],
          "template": " {{ .HEAD }} ",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": true,
            "display_status": true,
            "display_stash_count": true,
            "display_worktree_count": true,
            "branch_icon": "\uf126 ",
            "cherry_pick_icon": "",
            "commit_icon": "",
            "merge_icon": "",
            "no_commits_icon": "",
            "rebase_icon": "",
            "revert_icon": "",
            "tag_icon": "",
            "branch_gone_icon": "\uf00d",
            "branch_identical_icon": "\ue63f"
          }
        },
        {
          "type": "text",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "15",
          "background": "130",
          "template": " {{ .Segments.Git.Working.String }} "
        },
        {
          "type": "text",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "15",
          "background": "94",
          "template": " {{ .Segments.Git.Staging.String }} "
        },
        {
          "type": "text",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "252",
          "background": "242",
          "template": " {{ .Segments.Git.BranchStatus }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "15",
          "background": "160",
          "template": "{{ if not .Writable }} \uea75 {{ end }}"
        },
        {
          "type": "status",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "15",
          "background": "173",
          "properties": {
            "status_template": "{{ if ne .Code 0 }} {{ reason .Code }}({{ .Code }}) {{ end }}"
          }
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
